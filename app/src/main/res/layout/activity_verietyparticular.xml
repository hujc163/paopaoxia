<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是商品详情界面"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论"
        android:onClick="onClick"
        android:id="@+id/btn_verietyparticular_comment" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我想要"
        android:onClick="onClick"
        android:id="@+id/btn_verietyparticular_myneed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系楼主"
        android:onClick="onClick"
        android:id="@+id/btn_verietyparticular_calllz" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是一个用户"
        android:id="@+id/btn_verietyparticular_userinfo" />

</LinearLayout>
