<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:background="#F6F6F6">
        <ImageView
            android:id="@+id/iv_homepage_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/icon_user3x"
            android:onClick="onClick"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="泡泡侠"
            android:textColor="#424242"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
        <ImageView
            android:id="@+id/iv_homepage_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_search3x"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A6A8A9"/>

    <fragment
        android:id="@+id/fm_homepage"
        android:name="com.codans.paopaoxia.module.homepage.HomepageMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">


    </fragment>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_maopao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/speak3x">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_maopao_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:layout_weight="5"/>

            <TextView
                android:id="@+id/tv_maopao_go"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:layout_weight="14"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </TextView>
    </LinearLayout>



</RelativeLayout>
